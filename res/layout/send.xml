<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtPhone" android:layout_gravity="left|center_vertical" android:hint="请输入手机号码"/>
    <EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtMessage" android:layout_gravity="center_vertical|left" android:hint="请输入短信"
    android:gravity="top" android:minLines="10"/>
    <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="发送"
    android:id="@+id/btnsend" android:layout_gravity="center_vertical|right"
    android:textAlignment="center"/>
</LinearLayout>